<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

	<bean name="BidderNode" parent="NodeWithJMX" scope="singleton">
		<property name="logLevel" value="WARN" />
		<property name="agents">
			<list>
				<ref bean="BidderAgent" />
			</list>
		</property>
	</bean>

	<bean name="BidderAgent" parent="SimpleAgent" scope="prototype">
		<property name="agentBeans">
			<list>
				<bean name="BidderBean" class="de.dailab.jiactng.aot.auction.beans.BidderBean" scope="prototype">
					<property name="logLevel" value="INFO" />
					
					<property name="bidderId" value="20_maxEnd" />
					<property name="messageGroup" value="test-group" />
					<!-- XXX add more properties if needed, e.g. for fine-tuning strategies -->
				</bean>
			</list>
		</property>
	</bean>

</beans>
